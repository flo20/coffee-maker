{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "plugin:react/recommended",
        "airbnb"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "indent": [
            "error",
            2
          ],
          "linebreak-style": [
            "error",
            "unix"
          ],
          "quotes": [
            "error",
            "double"
          ],
          "semi":[
            "error",
            "always"
          ],
          "comma-spacing": [
            "error",
            {"before": false, "after": true}
          ],
          "arrow-spacing": [
            "error",
            {"before": true, "after": true}
          ],
          "space-infix-ops": [
            "error", 
            { "int32Hint": false }],
          "no-unused-vars": [
            "error"
          ],
          "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }]
    }
}
